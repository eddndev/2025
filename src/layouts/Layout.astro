---
import "../styles/global.css";
import { ClientRouter } from 'astro:transitions';

interface Props {
	title?: string;
	description?: string;
}

const { 
	title = "eddn.dev — Personal Journal", 
	description = "Ingeniería de software, trayectoria y pensamientos personales de Eduardo Alonso." 
} = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="theme-color" content="#10b981" />
		
		<title>2025.</title>
		<meta name="description" content="Una carta abierta para ti." />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content="2025." />
		<meta property="og:description" content="Una carta abierta para ti." />
		<meta property="og:image" content="/og-image.jpg" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:title" content="2025." />
		<meta property="twitter:description" content="Una carta abierta para ti." />
		<meta property="twitter:image" content="/og-image.jpg" />

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
	</head>
	<body class="selection:bg-brand-500/30 overflow-x-hidden bg-slate-950">
		<main class="min-h-screen w-full p-0 m-0">
			<slot />
		</main>

		<script>
			import { gsap } from 'gsap';
			import { ScrollTrigger } from 'gsap/ScrollTrigger';

			gsap.registerPlugin(ScrollTrigger);

			// Simple cleanup for View Transitions
			document.addEventListener('astro:before-swap', () => {
				ScrollTrigger.getAll().forEach(t => t.kill());
			});
		</script>
	</body>
</html>
