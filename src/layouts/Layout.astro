---
import "../styles/global.css";
import { ClientRouter } from 'astro:transitions';

interface Props {
	title?: string;
	description?: string;
}

const { 
	title = "eddn.dev — Personal Journal", 
	description = "Ingeniería de software, trayectoria y pensamientos personales de Eduardo Alonso." 
} = Astro.props;
---

<!doctype html>
<html lang="es" class="overflow-x-hidden">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		
		<title>{title}</title>
		<meta name="description" content={description} />
		
		<!-- Canonical URL -->
		<link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:site_name" content="eddn.dev" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		
		<ClientRouter />
		
		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
	</head>
	<body class="selection:bg-brand-500/30 overflow-x-hidden bg-slate-950">
		<main class="min-h-screen w-full p-0 m-0">
			<slot />
		</main>

		<script>
			import Lenis from 'lenis';
			import { gsap } from 'gsap';
			import { ScrollTrigger } from 'gsap/ScrollTrigger';

			gsap.registerPlugin(ScrollTrigger);

			let lenis: Lenis;

			const update = (time: number) => {
				lenis?.raf(time * 1000);
			};

			function init() {
				// Initialize Lenis
				lenis = new Lenis({
					duration: 1.2,
					easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
					touchMultiplier: 2,
				});

				// GSAP & Lenis integration
				lenis.on('scroll', ScrollTrigger.update);
				gsap.ticker.add(update);
				gsap.ticker.lagSmoothing(0);

				// Global Animations
				animateContent();
			}

			function animateContent() {
				// 1. Hero / Header Reveal
				// Targets direct children of the main header
				const heroElements = document.querySelectorAll('main > header > *');
				if (heroElements.length) {
					gsap.fromTo(heroElements, 
						{ y: 20, opacity: 0 },
						{ 
							y: 0, 
							opacity: 1, 
							duration: 0.8, 
							stagger: 0.1, 
							ease: "power3.out", 
							clearProps: "all" 
						}
					);
				}

				// 2. Grid Items (Blog Posts, Cards)
				// Targets children of any generic grid container
				const gridItems = document.querySelectorAll('.grid > article, .grid > a, .grid > div');
				if (gridItems.length) {
					gsap.fromTo(gridItems,
						{ y: 10 },
						{ 
							y: 0, 
							duration: 0.4, 
							stagger: 0.05, 
							ease: "power2.out", 
							delay: 0.1, 
							clearProps: "all" 
						}
					);
				}

				// 3. List/Table Items (LeetCode Rows, Trajectory Timeline)
				const listItems = document.querySelectorAll('tbody > tr, .space-y-12 > .relative');
				if (listItems.length) {
					gsap.fromTo(listItems,
						{ x: -10, opacity: 0 },
						{ 
							x: 0, 
							opacity: 1, 
							duration: 0.5, 
							stagger: 0.05, 
							ease: "power2.out", 
							delay: 0.3, 
							clearProps: "all" 
						}
					);
				}
			}

			function cleanup() {
				if (lenis) {
					lenis.destroy();
				}
				gsap.ticker.remove(update);
				ScrollTrigger.getAll().forEach(t => t.kill());
			}

			document.addEventListener('astro:page-load', init);
			document.addEventListener('astro:before-swap', cleanup);
		</script>
	</body>
</html>
